{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "python3 -S ${CLAUDE_PLUGIN_ROOT}/hooks/blackbox.py",
            "timeout": 30
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 -S ${CLAUDE_PLUGIN_ROOT}/hooks/blackbox.py",
            "timeout": 30
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 -S ${CLAUDE_PLUGIN_ROOT}/hooks/blackbox.py",
            "timeout": 30
          }
        ]
      }
    ]
  }
}
