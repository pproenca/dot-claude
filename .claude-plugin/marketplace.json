{
  "name": "dot-claude",
  "owner": {
    "name": "Pedro Proenca",
    "email": "pedro@10xengs.com"
  },
  "lspServers": {
    "clangd": {
      "command": "clangd",
      "args": ["--background-index"],
      "extensionToLanguage": {
        ".c": "c",
        ".h": "c",
        ".cpp": "cpp",
        ".cc": "cpp",
        ".cxx": "cpp",
        ".hpp": "cpp",
        ".hxx": "cpp",
        ".C": "cpp",
        ".H": "cpp"
      }
    },
    "typescript-language-server": {
      "command": "typescript-language-server",
      "args": ["--stdio"],
      "extensionToLanguage": {
        ".ts": "typescript",
        ".tsx": "typescriptreact",
        ".js": "javascript",
        ".jsx": "javascriptreact",
        ".mts": "typescript",
        ".cts": "typescript",
        ".mjs": "javascript",
        ".cjs": "javascript"
      }
    }
  },
  "metadata": {
    "description": "Claude Code plugins for productivity workflows - skills, agents, commands, and hooks",
    "version": "1.0.0"
  },
  "repository": "https://github.com/pedroproenca/dot-claude",
  "plugins": [
    {
      "name": "dev-workflow",
      "source": "./plugins/dev-workflow",
      "description": "TDD enforcement, systematic debugging, and code review with planning methodology loaded at session start",
      "keywords": [
        "tdd",
        "debugging",
        "code-review",
        "planning",
        "methodology",
        "verification"
      ]
    },
    {
      "name": "dev-python",
      "source": "./domain_plugins/dev-python"
    },
    {
      "name": "dev-ts",
      "source": "./domain_plugins/dev-ts"
    },
    {
      "name": "dev-cpp",
      "source": "./domain_plugins/dev-cpp"
    }
  ]
}
